# Escape key is C-t, literal is a.
escape ^Tt

# I like a large scrollback buffer.
defscrollback 9000

# clear scrollback buffer
bind F eval 'scrollback 0' 'scrollback 9000' 'echo "scrollback buffer cleared"'

# don't show startup message.
startup_message off

# echo command name whenever a window is created or resurrected.
verbose on


# enable visual vells
vbell on


# enable 256 color
term screen-256color

# don't resize terminal width when re-attached.
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

caption always "%-w%10L>%{=b bw}%n %t%{-}%+w%-0="
hardstatus alwayslastline "%H%=%Y/%m/%d %02c"
shelltitle "$ |shell"

# enable scrollwheel
termcapinfo xterm* 'ti@:te@'


#split window
bind s eval split focus "select 0"
bind | eval 'split -v' focus "select 0"

# move region
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom
# resize
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

shell -$SHELL
